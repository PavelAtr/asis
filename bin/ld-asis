#!/bin/sh

is_link=1
is_shared=0

for arg in "$@"; do
    [ "$arg" = "-c" ] && is_link=0
    [ "$arg" = "-shared" ] && is_shared=1
done

if [ "$is_link" -eq 1 ] && [ "$is_shared" -eq 0 ]; then
    # Линковка обычного бинаря — добавляем crt.o и -nostdlib
    exec ld -nostdlib $@
else
    # Компиляция или линковка shared — ничего не добавляем
    exec ld -nostdlib $@
fi
